<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import tenhouvisualizer.BoardControl?>
<?import tenhouvisualizer.MjlogTreeControl?>
<BorderPane id="AnchorPane" prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tenhouvisualizer.AppController" fx:id="root">
    <top>
        <MenuBar>
            <Menu text="ファイル">
                <MenuItem text="終了" onAction="#onExit"/>
            </Menu>
            <Menu text="データベース">
                <MenuItem text="Webから鳳凰卓の牌譜をインポート" onAction="#openDownloader"/>
            </Menu>
            <Menu text="ツール">
                <MenuItem text="シャンテン後退解析" onAction="#openSyantenBackAnalyzer"/>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <ListView fx:id="listView"/>
    </left>
    <center>
        <BorderPane>
            <center>
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <VBox alignment="CENTER">
                        <HBox alignment="CENTER">
                            <VBox>
                                <BoardControl fx:id="boardControl" height="600.0" width="600.0"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </center>
            <!--<bottom>-->
                <!--<Button>aaa</Button>-->
            <!--</bottom>-->
        </BorderPane>
    </center>
    <right>
        <MjlogTreeControl fx:id="mjlogTreeControl"/>
    </right>
    <bottom>
        <ToolBar fx:id="statusBar">
            <Label fx:id="label"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="label2"/>
            <ProgressBar fx:id="progressBar" progress="0" />
        </ToolBar>
    </bottom>
</BorderPane>

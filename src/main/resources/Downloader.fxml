<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tenhodownloader.DownloaderController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="ファイル">
                    <MenuItem text="閉じる" onAction="#onExit"/></Menu>
                <Menu text="ツール">
                    <MenuItem text="データベースごと出力" onAction="#dump"/>
                    <MenuItem text="mjlogファイルを出力" onAction="#exportMjlog"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="75" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>
            <TabPane fx:id="tabPane" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Tab fx:id="currentWeekTab" text="今週(1時間ごと)" closable="false">
                    <ListView fx:id="hourListView"/>
                </Tab>
                <Tab fx:id="currentYearTab" text="今年(1日ごと)" closable="false">
                    <ListView fx:id="dateListView"/>
                </Tab>
                <Tab fx:id="pastYearsTab" text="昨年以前(1年ごと)" closable="false">
                    <ListView fx:id="yearListView"/>
                </Tab>
            </TabPane>
            <Button text="インデックスを追加する" onAction="#downloadIndex" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                <AnchorPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <TextField fx:id="filterField" promptText="天鳳IDを入力" AnchorPane.bottomAnchor="0.0"
                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    <Button id="clearButton" onAction="#clearFilterField" AnchorPane.bottomAnchor="4.0"
                            AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="4.0">
                        <padding>
                            <Insets/>
                        </padding>
                        <graphic>
                            <ImageView>
                                <Image requestedWidth="24" requestedHeight="24"
                                       url="icons/ic_cancel_white_24dp_1x.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </AnchorPane>
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="downloadColumn" text="済" editable="false"/>
                        <TableColumn fx:id="dateTimeColumn" text="対戦日" editable="false"/>
                        <TableColumn fx:id="maColumn" text="麻" editable="false"/>
                        <TableColumn fx:id="souColumn" text="荘" editable="false"/>
                        <TableColumn fx:id="firstColumn" text="1位" editable="false"/>
                        <TableColumn fx:id="secondColumn" text="2位" editable="false"/>
                        <TableColumn fx:id="thirdColumn" text="3位" editable="false"/>
                        <TableColumn fx:id="fourthColumn" text="4位" editable="false"/>
                    </columns>
                </TableView>
            </VBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Button text="牌譜をデータベースに追加する" onAction="#downloadMjlog"/>
                <Button text="牌譜をデータベースから削除する" onAction="#removeMjlog"/>
            </HBox>
        </GridPane>
    </center>
    <bottom>
        <ToolBar>
            <Label fx:id="statusBarLabel"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <ProgressBar fx:id="progressBar" progress="0" />
        </ToolBar>
    </bottom>
</BorderPane>
